<h1 class="text-center mt-4"> Categories listing page </h1>

<div class="apple_pagination">
  <div class="page_info">
    <%= page_entries_info @categories %>
  </div>
  <%= will_paginate @categories, :container => false %>
</div>

<table>
  <thead>
    <tr>
      <th> Name </th>
      <th> Articles count </th>
      <th> Created at </th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <% if category.name %>
          <td><%= link_to category.name, category_path(category) %> |   |</td>
          <td><%= pluralize(category.articles.count, "article") %></td>
          <td>Created <%= time_ago_in_words(category.created_at) %> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="apple_pagination">
  <div class="page_info">
    <%= page_entries_info @categories %>
  </div>
  <%= will_paginate @categories, :container => false %>
</div>
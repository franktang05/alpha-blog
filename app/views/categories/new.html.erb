<h1 class="text-center mt-4">Create a new category! </h1>


<% if @category.errors.any? %>
  <h2>The following errors prevented the user from being saved </h2>
  <ul>
    <% @category.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @category, local: true) do |f| %>
  <p>
    <%= f.label :name, "Category name", class: "col-2 col-form-label" %></br>
    <%= f.text_field :name, placeholder: "Enter a name" %>
  </p>

  <p>
    <%= f.submit(class: "btn btn-success btn-lg") %>
  </p>
  <p>
    <%= link_to "Cancel and return to article list", articles_path %>
  </p>
<% end %>


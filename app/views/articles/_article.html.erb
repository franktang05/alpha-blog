<table>
  <thead>
    <tr>
      <th> Title </th>
      <th> Description </th>
      <th colspan=3> Actions </th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <% if article.user %>
          <td>by <%= link_to article.user.username, user_path(article.user) %> |   |</td>
        <% end %>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        
          <td><%= link_to 'Show', article_path(article.id) %></td>
        <% if logged_in? && (article.user == current_user || current_user.admin?)%>
          <td><%= link_to 'Edit', edit_article_path(article.id) %></td>
          <td><%= link_to 'Delete', article_path(article.id), method: :delete, data: { confrim: "Are you sure?" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Create new article', new_article_path %>
</p>
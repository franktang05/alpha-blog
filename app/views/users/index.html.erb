<h1 class="text-center mt-4">Alpha Blog</h1>

<table>
  <thead>
    <tr>
      <th> Username </th>
      <th> Profile Image </th>
      <th colspan=4> Actions </th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td> <%= link_to user.username, user %>|    |</td>
        <td><%= link_to gravatar_for(user, size: 80), user %></td>
        <td><%= pluralize(user.articles.count, "article") %></td>
        <td><%= link_to 'View profile', user %></td>
        <% if logged_in? && user == current_user %>
          <td><%= link_to 'Edit profile', edit_user_path(user) %></td>
        <% end %>
        <td>Joined <%= time_ago_in_words(user.created_at) %> ago </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="apple_pagination">
  <div class="page_info">
    <%= page_entries_info @users %>
  </div>
  <%= will_paginate @users, :container => false %>
</div>

<p>
  <%= link_to 'Create new article', new_article_path %>
</p>